<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Short URL Dashboard</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 40px;
    }

    h1 {
      text-align: center;
      color: #333;
    }

    .go-back {
      text-align: center;
      margin-bottom: 20px;
    }

    .go-back a {
      text-decoration: none;
      background-color: #007bff;
      color: white;
      padding: 10px 20px;
      border-radius: 6px;
      font-size: 16px;
    }

    table {
      margin: auto;
      width: 90vw;
      border-collapse: collapse;
      background: white;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      word-break: break-word;   /* ‚úÖ Break long URLs */
      max-width: 30vw;          /* ‚úÖ Limit cell width */
    }

    th {
      background-color: #007bff;
      color: white;
    }

    tr:hover {
      background-color: #f1f1f1;
    }

    .short-url {
      color: #007bff;
      text-decoration: none;
    }
  </style>
</head>
<body>

  <h1>üìä Short URL Dashboard</h1>

  <!-- ‚úÖ Go Back Button -->
  <div class="go-back">
    <a href="views/submitFormDetails">‚¨ÖÔ∏è Go Back to Form</a>
  </div>

  <table>
    <thead>
      <tr>
        <th>Short ID</th>
        <th>Original URL</th>
        <th>Visits</th>
      </tr>
    </thead>
    <tbody>
      <% urls.forEach(url => { %>
        <tr>
          <td>
            <a class="short-url" href="/urls/<%= url.shortId %>" target="_blank">
              <%= url.shortId %>
            </a>
          </td>
          <td><%= url.redirectUrl %></td>
          <td><%= url.visitHistory.length %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
